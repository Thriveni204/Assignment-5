#Functions in javascript

function hello() {
    console.log("hello world from javascript");
    console.log("programming is fun");
    console.log("world is nice");

}

hello();


function number(num){
    console.log("number is " + num);

}

number(124);


function product(a, b){
    return a*b;
}

let j=product(2,2);
console.log(j);

function multiply(num, _num){
    console.log(num*_num);
}
multiply(15,15);

#Conditions in javaScript

let number1= [];
number1= [1, 2, 3, 1, ,3, 2,];
if (number1[0] == number1[1]){
    console.log("if block executes and value is 1");

} else{
    console.log("else block execute");
}



if(number1[0]==number1[2]){
    console.log("if block also ececutes");
}else if(number1[1]==number1[5]){
    console.log("elseif executes");

}else{
    console.log("final executes")

}

#Arrays in javascript



let phone=[];
lst = ["nokia", "vivo", "redmi", "realme"];
console.log(phone);
console.log(phone[0]);
console.log(phone[1]);
console.log(phone[2]);
console.log(phone[3]);
    

let nums=[]
nums = [1, 2, 3, 4, 5, 6, 7];
console.log(nums[0]);
console.log(nums[1]);
console.log(nums[2]);
console.log(nums[3]);
console.log(nums[4]);
console.log(nums[0] + nums[1] + nums[2] + nums[3] + nums[4]);
console.log(nums.sort());
console.log(nums.push(6));
console.log(nums.push(7));

console.log(nums.pop(6));
console.log(nums);


